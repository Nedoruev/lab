rem частина 1

@echo off
cd /users/user/Desktop

mkdir -p лабораторні/пз-22-3/Недоруєв К.К/командна\ строка/.прихована\ папка
mkdir -p лабораторні/пз-22-3/Недоруєв К.К/командна\ строка/неприхована\ папка

attrib +h "лабораторні\пз-22-3\Недоруєв К.К\командна строка\.прихована папка"

xcopy /? > "лабораторні\пз-22-3\Недоруєв К.К\командна строка\не прихована папка\copyhelp.txt"

xcopy "лабораторні\пз-22-3\Недоруєв К.К\командна строка\не прихована папка\copyhelp.txt" "лабораторні\пз-22-3\Недоруєв К.Ккомандна строка\прихована папка\copied_copyhelp.txt"

mkdir "лабораторні\пз-22-3\Недоруєв К.К\командна строка\прихована папка"
mkdir "лабораторні\пз-22-3\Недоруєв К.К\командна строка\не прихована папка"

attrib +h "лабораторні\пз-22-3\Недоруєв К.К\командна строка\прихована папка"

xcopy "лабораторні\пз-22-3\Недоруєв К.К\командна строка\не прихована папка\copyhelp.txt" "лабораторні\пз-22-3\Недоруєв К.Ккомандна строка\Скрытая папка\copied_copyhelp.txt"

rem  відкриває файл зі звітом 

@echo off
start /wait "Нове вікно" "C:/users/user/Desktop\звіт.docx"


rem 2 частина  
@echo off

if "%~1"=="-h" (
    call :ShowHelp
    exit /b 0
)

if "%~1"=="" (
    echo Параметри не вказано. Введіть шляхи до каталогів як параметри або використайте -h для отримання довідки.
    exit /b 1
)

for %%A in (%*) do (
    echo Зміна атрибутів у каталозі %%A
    attrib -r -s -h /s "%%A\*.*"
)

pause
exit /b 0

:ShowHelp
echo Довідка:
echo  -h, --help   Виводить цю довідку.
echo  Параметри:   Шляхи до каталогів, для яких треба змінити атрибути файлів.
exit /b 0
